                                                                            <Style TargetType="TextBlock">
                                                                                <Setter Property="Foreground" Value="Red"/>
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding EstaPago}" Value="True">
                                                                                        <Setter Property="Foreground" Value="Green"/>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </TextBlock.Style>
                                                                    </TextBlock>
